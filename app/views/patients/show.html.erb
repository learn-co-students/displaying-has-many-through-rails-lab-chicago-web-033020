<h1><%= @patient.name %> Appointments</h1><br>
<h2><%= link_to "All Patients", patients_path%></h2>

<% @patient.appointments.each do |appointment|%>
<%= link_to appointment.doctor.name, doctor_path(appointment.doctor)%>
<%= appointment.appointment_datetime.strftime("%B %d, %Y at %H:%M") %><br>
<% end %>